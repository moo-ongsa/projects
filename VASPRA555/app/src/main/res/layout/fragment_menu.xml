<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/exitmenu"
            android:layout_width="129dp"
            android:layout_height="860dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="294dp"
            android:layout_height="857dp"
            android:src="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnprofile"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="294dp"
            android:layout_height="143dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <Button
            android:id="@+id/btnCart"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:textColor="#BA7C7C"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/exitmenu"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/btnprofile" />

        <Button
            android:id="@+id/btnHistory"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="294dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:textColor="#BA7C7C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/btnCart" />

        <Button
            android:id="@+id/btnGiveaway"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="292dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:textColor="#BA7C7C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/btnHistory" />

        <Button
            android:id="@+id/btnHelp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="295dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:textColor="#BA7C7C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/btnGiveaway" />

        <Button
            android:id="@+id/btnLogout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="295dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:textColor="#BA7C7C"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/btnHelp" />

        <TextView
            android:id="@+id/userFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:text="ชื่อสกุล"
            android:textColor="#BA7C7C"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnprofile"
            app:layout_constraintStart_toStartOf="@+id/btnprofile"
            app:layout_constraintTop_toTopOf="@+id/btnprofile"
            app:layout_constraintVertical_bias="0.64" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilepic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnprofile"
            app:layout_constraintEnd_toEndOf="@+id/btnprofile"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="@+id/btnprofile"
            app:layout_constraintTop_toTopOf="@+id/btnprofile"
            app:layout_constraintVertical_bias="0.65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shoppingcart"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/document"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/gift"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/question"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logout"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:background="#BA7C7C"
        android:layout_marginTop="143dp"
        android:layout_marginLeft="2dp"/>
    <ImageView
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:background="#BA7C7C"
        android:layout_marginTop="211dp"
        android:layout_marginLeft="2dp"/>
    <ImageView
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:background="#BA7C7C"
        android:layout_marginTop="279dp"
        android:layout_marginLeft="2dp"/>
    <ImageView
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:background="#BA7C7C"
        android:layout_marginTop="347dp"
        android:layout_marginLeft="2dp"/>
    <ImageView
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:background="#BA7C7C"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="2dp"/>
    <ImageView
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:background="#BA7C7C"
        android:layout_marginTop="482dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="160dp"
        android:text="รถเข็น"
        android:textColor="#BA7C7C"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="230dp"
        android:text="ประวัติการทำบุญ"
        android:textColor="#BA7C7C"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="300dp"
        android:text="รางวัลตอบแทน"
        android:textColor="#BA7C7C"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="370dp"
        android:text="ช่วยเหลือข้อเสนอแนะ"
        android:textColor="#BA7C7C"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="435dp"
        android:text="ออกจากระบบ"
        android:textColor="#BA7C7C"
        android:textSize="18dp" />

</FrameLayout>