<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="362dp"
    android:layout_height="639dp"
    tools:context=".CoffinFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_coffinheader"
            android:layout_width="61dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:text="ศพไร้ญาติ"
            android:textColor="#BA7C7C"
            app:layout_constraintBottom_toTopOf="@+id/imageFish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageCoffin"
            android:layout_width="224dp"
            android:layout_height="197dp"
            android:src="@drawable/ic_coffin"
            app:layout_constraintBottom_toTopOf="@+id/imageRectanglebox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.29" />

        <TextView
            android:id="@+id/txt_currentcoffinmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/txt_CoffinVatDetail"
            app:layout_constraintEnd_toStartOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCoffin"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_maxcoffinmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="/TextView"
            app:layout_constraintBottom_toTopOf="@+id/txt_CoffinVatDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/imageCoffin"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_CoffinVatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/txt_CoffinVatDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCoffin"
            app:layout_constraintVertical_bias="0.87" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:text="/"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageRectanglebox"
            android:layout_width="359dp"
            android:layout_height="118dp"
            android:rotation="180"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_ConstructVatDetail"
            app:layout_constraintVertical_bias="0.961" />

        <TextView
            android:id="@+id/txt_needinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จำนวนเงินที่ต้องการบริจาค"
            app:layout_constraintBottom_toTopOf="@+id/editmoneyamount"
            app:layout_constraintEnd_toEndOf="@+id/imageRectanglebox"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="@+id/imageRectanglebox"
            app:layout_constraintTop_toTopOf="@+id/imageRectanglebox"
            app:layout_constraintVertical_bias="0.485" />

        <Button
            android:id="@+id/btn_donatesubmitcoffin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="#00A1B6"
            android:text="บริจาค"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="@+id/imageRectanglebox"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toEndOf="@+id/editmoneyamount"
            app:layout_constraintTop_toTopOf="@+id/imageRectanglebox"
            app:layout_constraintVertical_bias="0.771" />

        <TextView
            android:id="@+id/txt_CoffinVatDetail"
            android:layout_width="269dp"
            android:layout_height="126dp"
            android:text="test detail"
            app:layout_constraintBottom_toTopOf="@+id/imageRectanglebox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editmoneyamount"
            android:layout_width="236dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/imageRectanglebox"
            app:layout_constraintEnd_toStartOf="@+id/btn_donatesubmitfish"
            app:layout_constraintHorizontal_bias="0.347"
            app:layout_constraintStart_toStartOf="@+id/imageRectanglebox"
            app:layout_constraintTop_toTopOf="@+id/imageRectanglebox"
            app:layout_constraintVertical_bias="0.818" />

        <ImageButton
            android:id="@+id/btn_back_coffin"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="#00FFFFFF"
            android:src="?attr/actionModeCloseDrawable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>